<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>

    <style name="ButtonCityName">
        <item name="backgroundTint">@color/colorButton</item>
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textSize">20dp</item>
        <item name="strokeColor">@color/colorStrokeButton</item>
    </style>
